%nav.top-bar
  %ul.title-area
    %li.name
      %h1
        = link_to 'Dashboard', dashboard_path
  %section.top-bar-section
    %ul.left
      %li.divider
      %li= link_to 'Create a new post', new_post_path
      / %li= link_to 'Blog settings', settings_path
      %li= link_to 'Request a new feature', 'http://asana.com'

.row
  .small-12.small-centered
    %table.table
      %thead
        %tr
          %th Title
          %th Content
          %th Edit
          %th Delete
      %tbody
        - @posts.each do |post|
          %tr{ id: post.id }
            %td 
              = post.title
            %td 
              = truncate(post.content)
            %td
              = link_to 'Edit', edit_post_path(post.id)
            %td
              = link_to 'Delete', post_path(post.id), method: :delete
